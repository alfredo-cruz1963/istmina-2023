
  <div class="container p-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h6><strong>Reset password</strong></h6>
                </div>
                <div class="card-body">
                    <form action="/reset/{{id}}" method="POST">
                        <div class="input-group mb-3">
                            <input type="password" name="password" placeholder="Nuevo Password" class="form-control" title="minimo 8 caracteres" pattern="[A-Za-z0-9!?-]{8,12}" autofocus required>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" name="repepass" placeholder="Confirme Password" class="form-control" title="minimo 8 caracteres" pattern="[A-Za-z0-9!?-]{8,12}" required>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block">Update password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>