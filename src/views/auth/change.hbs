<div class="container p-5">
    <div class="row">
        <div class="col-sm-8 offset-md-2">
            <div class="card ">
                <div class="card-header bg-dark text-white ">
                    <h6>Cambiar password</h6>
                </div>
                <div class="card-body" >
                    <form action="/change/{{user.id}}" method="POST">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="passold" class="col-sm-4 col-form-label text-right">Password actual</label>
                                <div class="col-sm-6">
                                    <div class="input-group ">
                                        <input type="password" class="form-control" name="oldpass" id='oldpass' placeholder="Password Actual" value="{{user.password}}" readonly>
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="passnew" class="col-sm-4 col-form-label text-right">Nuevo Password</label>
                                <div class="col-sm-6">
                                    <div class="input-group ">
                                        <input type="password" class="form-control" name="newpass" id='newpass' id="passnew"placeholder="Nuevo Password" title="minimo 8 caracteres" pattern="[A-Za-z0-9!?-]{8,12}" required>
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="repetpass" class="col-sm-4 col-form-label text-right">Repita Password</label>
                                <div class="col-sm-6">
                                    <div class="input-group ">
                                        <input type="password" class="form-control" name="repepass" id='repepass' placeholder="Repita Password" title="minimo 8 caracteres" pattern="[A-Za-z0-9!?-]{8,12}" required>
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-1">
                            <div class="col-sm-5 mx-auto">
                                <button class="btn btn-primary btn-block ">Guardar Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>